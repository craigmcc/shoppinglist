{
  "name": "@craigmcc/shoppinglist",
  "version": "1.0.0",
  "description": "Shopping List Application",
  "main": "dist/server.js",
  "engines": {
    "node": ">=16.x"
  },
  "scripts": {
    "develop:dev": "concurrently \"npm:server:build:watch\" \"npm:start:dev\"",
    "develop:prod": "concurrently \"npm:server:build:watch\" \"npm:start:prod\"",
    "heroku:local": "cross-env heroku local web",
    "heroku:start": "node dist/server.js",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false && npm ci --force --prefix client && npm run build --prefix client",
    "preheroku:local": "tsc",
    "postinstall": "tsc",
    "run": "cross-env NODE_ENV=production node dist/server.js",
    "run:dev": "cross-env NODE_ENV=development node dist/server.js",
    "run:prod": "cross-env NODE_ENV=production node dist/server.js",
    "server:build": "tsc",
    "server:build:watch": "tsc --watch --preserveWatchOutput",
    "start:dev": "cross-env NODE_ENV=development nodemon dist/server.js",
    "start:prod": "cross-env NODE_ENV=production nodemon dist/server.js",
    "test": "cross-env NODE_ENV=test mocha -r ts-node/register src/**/*.test.ts",
    "test:coverage": "cross-env NODE_ENV=test nyc mocha -r ts-node/register src/**/*.test.ts",
    "test:watch": "cross-env NODE_ENV=test mocha --watch -r ts-node/register src/**/*.test.ts",
    "tsc": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/craigmcc/shoppinglist.git"
  },
  "keywords": [
    "express",
    "postgres",
    "react",
    "sequelize",
    "typescript",
    "shopping"
  ],
  "author": "craigmcc",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/craigmcc/shopping/issues"
  },
  "homepage": "https://github.com/craigmcc/shopping#readme",
  "dependencies": {
    "@craigmcc/oauth-orchestrator": "^1.0.4",
    "@craigmcc/openapi-builders": "^2.0.2",
    "@craigmcc/shared-utils": "^1.0.3",
    "axios": "^0.27.2",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.2",
    "cloudmailin": "^0.0.3",
    "cors": "^2.8.5",
    "custom-env": "^2.0.2",
    "date-fns": "^2.30.0",
    "express": "^5.0.0-beta.1",
    "express-basic-auth": "^1.2.1",
    "googleapis": "^121.0.0",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "node-pg-migrate": "^6.2.2",
    "nodemailer": "^6.9.3",
    "nyc": "^15.1.0",
    "pg": "^8.11.1",
    "pg-hstore": "^2.3.4",
    "pino": "^8.14.1",
    "rotating-file-stream": "^3.1.0",
    "sequelize": "^6.32.1",
    "sequelize-typescript": "^2.1.5"
  },
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/express": "^4.17.17",
    "@types/mocha": "^10.0.1",
    "@types/morgan": "^1.9.4",
    "@types/nodemailer": "^6.4.8",
    "@types/uuid": "^9.0.2",
    "chai": "^4.3.7",
    "chai-http": "^4.4.0",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3",
    "uuid": "^9.0.0"
  }
}
